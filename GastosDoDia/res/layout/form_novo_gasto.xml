<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="@string/form_label_descricao" />

	<EditText android:id="@+id/EditTextDescricao" 
		android:text=""
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="@string/form_label_valor" />

	<EditText android:id="@+id/EditTextValor" 
		android:text=""
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:numeric="decimal" />

	<Button android:text="Cadastrar" 
		android:id="@+id/ButtonSalvarGasto"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" />

</LinearLayout>
